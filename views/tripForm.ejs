<%- include("partials/header") %>

<div class="container py-5">
  <div class="trip-form-card shadow-sm mx-auto">
    <div class="card-body">
      <h2 class="card-title text-primary text-center mb-4">
        <%= trip ? "Edit Trip" : "Add New Trip" %>
      </h2>

      <% if (error) { %>
        <div class="alert alert-danger"><%= error %></div>
      <% } %>

      <form action="<%= trip ? '/trips/' + trip._id + '?_method=PUT' : '/trips' %>" method="POST">
        <div class="mb-3">
          <label for="title" class="form-label">Title</label>
          <input type="text" name="title" id="title" class="form-control" value="<%= trip ? trip.title : '' %>" required>
        </div>
        <div class="mb-3">
          <label for="destination" class="form-label">Destination</label>
          <input type="text" name="destination" id="destination" class="form-control" value="<%= trip ? trip.destination : '' %>" required>
        </div>
        <div class="mb-3">
          <label for="startDate" class="form-label">Start Date</label>
          <input type="date" name="startDate" id="startDate" class="form-control" value="<%= trip ? trip.startDate.toISOString().split('T')[0] : '' %>" required>
        </div>
        <div class="mb-3">
          <label for="endDate" class="form-label">End Date</label>
          <input type="date" name="endDate" id="endDate" class="form-control" value="<%= trip ? trip.endDate.toISOString().split('T')[0] : '' %>" required>
        </div>
        <div class="mb-3">
          <label for="price" class="form-label">Price</label>
          <input type="number" name="price" id="price" class="form-control" value="<%= trip ? trip.price : '' %>">
        </div>
        <div class="mb-3">
          <label for="description" class="form-label">Description</label>
          <textarea name="description" id="description" class="form-control" rows="4"><%= trip ? trip.description : '' %></textarea>
        </div>

        <div class="d-flex justify-content-between mt-4">
          <a href="/trips" class="btn btn-secondary">Cancel</a>
          <button type="submit" class="btn btn-primary"><%= trip ? "Update Trip" : "Create Trip" %></button>
        </div>
      </form>
    </div>
  </div>
</div>

<%- include("partials/footer") %>
