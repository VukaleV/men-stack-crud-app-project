<%- include("partials/header") %>
<link rel="stylesheet" href="/css/style.css">

<div class="container py-5">
  <div class="trip-detail-card mx-auto shadow" style="max-width: 800px;">
    <h2 class="text-primary mb-4"><%= trip.title %></h2>

    <div class="trip-info">
      <div class="trip-info-item">
        <h6>Destination</h6>
        <p><%= trip.destination %></p>
      </div>
      <div class="trip-info-item">
        <h6>Start Date</h6>
        <p><%= trip.startDate.toDateString() %></p>
      </div>
      <div class="trip-info-item">
        <h6>End Date</h6>
        <p><%= trip.endDate.toDateString() %></p>
      </div>
      <% if (trip.price) { %>
        <div class="trip-info-item">
          <h6>Price</h6>
          <p>â‚¬<%= trip.price %></p>
        </div>
      <% } %>
    </div>

    <% if (trip.description) { %>
      <div class="trip-description mt-3">
        <h6 class="text-muted mb-2">Description:</h6>
        <p><%= trip.description %></p>
      </div>
    <% } %>

    <div class="trip-buttons mt-4">
      <a href="/trips/<%= trip._id %>/edit" class="btn btn-outline-primary">Edit</a>
      <form action="/trips/<%= trip._id %>?_method=DELETE" method="POST">
        <button type="submit" class="btn btn-danger" onclick="return confirm('Delete this trip?')">Delete</button>
      </form>
      <a href="/trips" class="btn btn-secondary">Back</a>
    </div>
  </div>
</div>

<%- include("partials/footer") %>
